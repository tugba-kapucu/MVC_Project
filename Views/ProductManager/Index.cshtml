@model IEnumerable<MvcProje.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
           Ürün Adı :
        </th>
        <th>
           Şirket Adı :
        </th>
        <th>
            Kategori Adı:
        </th>
        <th>
           Miktar :
        </th>
        <th>
           Fiyat: 
        </th>
        <th>
            Stok:
        </th>
        <th>
           Sipariş :
        </th>
        <th>
            Tekrar :
        </th>
        <th>
            Devam Ediyor mu?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.ProductName
        </td>
        <td>
            @item.Supplier.CompanyName
        </td>
        <td>
            @item.Category.CategoryName
        </td>
        <td>
            @item.QuantityPerUnit
        </td>
        <td>
            @String.Format("{0: C}", item.UnitPrice)
        </td>
        <td>
            @item.UnitsInStock
        </td>
        <td>
            @item.UnitsOnOrder
        </td>
        <td>
            @item.ReorderLevel
        </td>
        <td>
            @item.Discontinued
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ProductID }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.ProductID }) |
            <a href='@Url.Action("Delete", "ProductManager", new {id=item.ProductID })' onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
        </td>
    </tr>
}

</table>
