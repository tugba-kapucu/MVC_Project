@model IEnumerable<MvcProje.Models.Category>

@{
    ViewBag.Title = "Kategori";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Kategori Adı :
        </th>
        <th>
            Açıklama :
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Detay", "Details", new { id = item.CategoryID }) |
                <a href='@Url.Action("Delete", "CategoryManager", new { id = item.CategoryID })' onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
            </td>
        </tr>
    }

</table>
